bindsym $r $mod+t                 exec $nsi urxvt -title Mail -e mutt
#bindsym $r $mod+w                 exec $nsi chromium, workspace $WS2
bindsym $r $mod+w            exec $nsi firefox
bindsym $r $mod+$alt+t            exec $nsi thunderbird
bindsym    $mod+p                 exec $nsi thunar
