# {{{ Variables
set $mod Mod4
set $alt Mod1
set $i3 /home/luca/.config/i3
set $scripts /home/luca/.config/i3/scripts
set $nsi --no-startup-id
set $r --release
set $w --whole-window
floating_modifier $mod
workspace_auto_back_and_forth yes
