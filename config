bindsym    $mod++l                exec $nsi xrandr --output LVDS1 --off --output HDMI1 --auto && nitrogen --restore && pactl set-card-profile 0 output:hdmi-surround
bindsym    $mod+$alt+l            exec $nsi xrandr --output HDMI1 --off --output LVDS1 --auto && nitrogen --restore
